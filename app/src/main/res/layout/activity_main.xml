<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!--button for starting extraction process-->


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/the_q_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Enter the Text"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/image_to_text"
        android:layout_width="61dp"
        android:layout_height="match_parent"
        android:background="#F3EDED"
        android:src="@drawable/ic_baseline_photo_camera_24" />


</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E2F3F0"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pro_search"
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/search"
                    android:layout_alignParentRight="true"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#0099FF"
                    android:text="Pro search" />

                <Button
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="8dp"
                    android:layout_weight="1"

                    android:backgroundTint="#0099FF"
                    android:text="search" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/left_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

                <ImageView
                    android:id="@+id/piro_left_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

                <TextView
                    android:id="@+id/the_result_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/right_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                <ImageView
                    android:id="@+id/piro_right_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />


            </LinearLayout>


        </LinearLayout>


        <ScrollView
            android:id="@+id/scrollable"
            android:layout_width="411dp"
            android:layout_height="530dp"

            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="#CEE9FB">


            <!-- textview to display the extracted text-->
            <TextView
                android:id="@+id/idPDFTV"
                android:textIsSelectable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </ScrollView>


        <LinearLayout
            android:id="@+id/Button_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:background="#FFFFFF"
            android:orientation="horizontal"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/idBtnExtract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:backgroundTint="#0099FF"
                android:text="See Text"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/showpdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:backgroundTint="#0099FF"
                android:text="PDFs"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/add_pdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="8dp"

                android:layout_weight="1"
                android:backgroundTint="#0099FF"
                android:gravity="center"
                android:text="Add PDFs"
                android:textAllCaps="false" />


        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>


